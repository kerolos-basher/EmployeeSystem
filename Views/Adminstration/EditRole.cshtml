@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Rols Roles";

}

<h1>Edit Role</h1>
<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Adminstration" asp-action="ListRoles"
           class="btn btn-danger">Cancel</a>
    </div>
</form>

<div class="col-sm-12">
    <div class="card  ">
        <div class="card-header">
            User In This Role :
        </div>
        <div class="card-body ">
            @if (Model.User.Any())
            {
                foreach (var item in Model.User)
                {
                    <h5 class="card-title">@item</h5>
                }
            }
            else
            {
                <h3> No User In This Role</h3>
            }
        </div>
        <div class="card-footer ">
            <a asp-controller="Adminstration" asp-action="EditUserInRole" asp-route-roleid="@Model.Id" class="btn btn-primary">Add Or Remove User</a>

        </div>
    </div>
</div>



