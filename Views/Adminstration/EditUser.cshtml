@model EditUesrViewModel
@{
    ViewData["Title"] = "Edit User ";
}
<h1>Edit User</h1>
<form method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Emil"></label>
        <input asp-for="Emil" class="form-control" />
        <span asp-validation-for="Emil" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Adminstration" asp-action="ListUsers" class="btn btn-info">Cancel</a>
    </div>
</form>

<div class="col-sm-12">
    <div class="card  ">
        <div class="card-header">
            User Role :
        </div>
        <div class="card-body ">
            @if (Model.Roles.Any())
            {
                foreach (var item in Model.Roles)
                {
                    <h5 class="card-title">@item</h5>
                }
            }
            else
            {
                <h3> No Role For This User</h3>
            }
        </div>
        <div class="card-footer ">
            <a asp-controller="Adminstration" asp-route-userId="@Model.Id" asp-action="EditAllUserRoles"  class="btn btn-primary">Manage Role</a>

        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card  ">
        <div class="card-header">
            User Role :
        </div>
        <div class="card-body ">
            @if (Model.Cliams.Any())
            {
                foreach (var item in Model.Cliams)
                {
                    <h5 class="card-title">@item</h5>
                }
            }
            else
            {
                <h3> No Claime For This User</h3>
            }
        </div>
        <div class="card-footer ">
            <a asp-controller="Adminstration" asp-action="ListRoles" class="btn btn-primary">Manage Role</a>

        </div>
    </div>
</div>



