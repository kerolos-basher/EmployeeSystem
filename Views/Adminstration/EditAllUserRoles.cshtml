@model List<ManageAllUserRoles>
@{
    var userId = ViewBag.userId;
    ViewData["Title"] = "User Role ";
}

<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="col-sm-12">
        <div class="card  ">
            <div class="card-header">
                Add Or Remove User Role :
            </div>
            <div class="card-body ">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].IsSelcted" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelcted" class="form-check-label">@Model[i].RoleName</label>
                    </div>
                }

            </div>
            <div class="card-footer ">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="Adminstration" asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
